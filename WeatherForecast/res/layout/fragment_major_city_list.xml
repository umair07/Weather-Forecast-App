<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/layout_list_refeshdata_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
         >

        <ImageView
            android:id="@+id/imageView_dashboard_refresh_majorcities_data"
            style="@style/style_imageView_dashboard_refresh_data"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/selector_btn_refresh" />
    </RelativeLayout>

    <ListView
        android:id="@+id/listView_MajorCities"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_list_refeshdata_container"
        android:layout_marginTop="5dp" >
    </ListView>

</RelativeLayout>